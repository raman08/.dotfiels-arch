#!/usr/bin/env bash

THEME='Blade'
ICONS='Zafiro-Red'
FONT='JetBrains Mono 10'
CURSOR='Qogirr'

SCHEMA='gsettings set org.gnome.desktop.interface'

apply_themes () {
	${SCHEMA} gtk-theme "$THEME"
	${SCHEMA} icon-theme "$ICONS"
	${SCHEMA} cursor-theme "$CURSOR"
	${SCHEMA} font-name "$FONT"
}

apply_themes
